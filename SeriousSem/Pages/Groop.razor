@page "/Groop"
@using SeriousSem.Data
@inject WeatherForecastService ForecastService

<h3>Группа</h3>

<p>Данные о группе</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in DateGroop)
            {
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private LogicGroop[] DateGroop;

    protected override async Task OnInitializedAsync()
    {
        DateGroop = await LogicGroop.GetForecastAsync(DateTime.Now);
    }
}
